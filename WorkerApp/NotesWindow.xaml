<Window x:Class="WorkerApp.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkerApp"
        mc:Ignorable="d"
        Title="NotesWindow" Height="268" Width="456">
    <Grid Margin="35,-12,42,0" Height="245" VerticalAlignment="Top">
        <Button  IsDefault="True" x:Name="btnYes" Content="Save" HorizontalAlignment="Left" Margin="13,198,0,0" VerticalAlignment="Top" Height="34" Width="122" Click="btnYes_Click"/>
        <Button IsCancel="True" x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="266,195,0,0" VerticalAlignment="Top" Height="37" Width="103"/>
        <TextBox x:Name="txtNotes"  AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Margin="13,35,0,0" TextWrapping="Wrap" Text="note" VerticalAlignment="Top" Width="356" Height="134"/>

    </Grid>
</Window>
